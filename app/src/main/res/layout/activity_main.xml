<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/image_first"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toStartOf="@id/image_second"
        android:src="@drawable/photo1_1"
        />
    <ImageView
        android:id="@+id/image_second"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toEndOf="@id/image_first"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/photo1_1"/>

    <ImageView
        android:id="@+id/image_third"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/photo1_1"
        app:layout_constraintBottom_toTopOf="@id/btn_tv"
        app:layout_constraintEnd_toStartOf="@id/image_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_first" />

    <ImageView
        android:id="@+id/image_fourth"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toEndOf="@id/image_third"
        app:layout_constraintTop_toBottomOf="@id/image_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_tv"
        android:src="@drawable/photo1_1"/>


    <TextView
        android:id="@+id/btn_tv"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/play_btn"
        android:backgroundTint="#6DBB13"
        android:gravity="center"
        android:text="Play"
        android:layout_marginTop="36dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />


</androidx.constraintlayout.widget.ConstraintLayout>